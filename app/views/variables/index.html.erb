<h1>Listing variables</h1>

<table class="table table-condensed">
<% @variables.each do |variable| %>
  <tr>
    <td><%= variable.name %></td>
    <td><%= variable.desc %></td>
    <td><%= variable.address %></td>
    <td><%= variable.equipment_id %></td>
    <td><%= variable.is_archive %></td>
    <td><%= variable.var_type %></td>
    <td><%= variable.last_value %></td>
    <td><%= variable.datetime_update_value %></td>
    <td><%= link_to 'Show', equipment_variable_path(variable.equipment_id, variable.id) %></td>
    <td><%= link_to 'Edit', edit_equipment_variable_path(variable.equipment_id, variable.id) %></td>
    <td><%= link_to 'Destroy', equipment_variable_path(variable.equipment_id, variable), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

